---
const { maxHeight = "400px", preview = true } = Astro.props;
---

{preview ? (
  <div class="content-preview">
    <div class="content-fade">
      <slot />
    </div>
    <div class="content-overlay"></div>
  </div>
) : (
  <slot />
)}

<style define:vars={{ maxHeight }}>
  .content-preview {
    position: relative;
    max-height: var(--maxHeight);
    overflow: hidden;
  }

  .content-fade {
    mask-image: linear-gradient(to bottom, 
      black 30%,
      rgba(0, 0, 0, 0.95) 40%,
      rgba(0, 0, 0, 0.9) 50%,
      rgba(0, 0, 0, 0.8) 60%,
      rgba(0, 0, 0, 0.6) 70%,
      rgba(0, 0, 0, 0.4) 80%,
      rgba(0, 0, 0, 0.2) 90%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(to bottom,
      black 30%,
      rgba(0, 0, 0, 0.95) 40%,
      rgba(0, 0, 0, 0.9) 50%,
      rgba(0, 0, 0, 0.8) 60%,
      rgba(0, 0, 0, 0.6) 70%,
      rgba(0, 0, 0, 0.4) 80%,
      rgba(0, 0, 0, 0.2) 90%,
      transparent 100%
    );
  }

  .content-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(to bottom, 
      transparent 0%,
      rgba(0, 0, 0, 0.2) 20%,
      rgba(0, 0, 0, 0.4) 40%,
      rgba(0, 0, 0, 0.6) 60%,
      rgba(0, 0, 0, 0.8) 80%,
      rgba(0, 0, 0, 0.9) 100%
    );
  }
</style>
