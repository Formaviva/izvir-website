<div class="content-preview">
  <div class="content-fade">
    <slot />
  </div>
  <div class="content-overlay"></div>
</div>

<style>
  .content-preview {
    position: relative;
    max-height: 400px;
    overflow: hidden;
  }

  .content-fade {
    mask-image: linear-gradient(to bottom, 
      black 30%,
      rgba(0, 0, 0, 0.95) 40%,
      rgba(0, 0, 0, 0.9) 50%,
      rgba(0, 0, 0, 0.8) 60%,
      rgba(0, 0, 0, 0.6) 70%,
      rgba(0, 0, 0, 0.4) 80%,
      rgba(0, 0, 0, 0.2) 90%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(to bottom,
      black 30%,
      rgba(0, 0, 0, 0.95) 40%,
      rgba(0, 0, 0, 0.9) 50%,
      rgba(0, 0, 0, 0.8) 60%,
      rgba(0, 0, 0, 0.6) 70%,
      rgba(0, 0, 0, 0.4) 80%,
      rgba(0, 0, 0, 0.2) 90%,
      transparent 100%
    );
  }

  .content-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(to bottom, 
      transparent 0%,
      rgba(0, 0, 0, 0.1) 20%,
      rgba(0, 0, 0, 0.2) 40%,
      rgba(0, 0, 0, 0.4) 60%,
      rgba(0, 0, 0, 0.6) 80%,
      rgba(0, 0, 0, 0.8) 100%
    );
    pointer-events: none;
  }
</style>
