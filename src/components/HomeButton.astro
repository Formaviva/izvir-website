<a href="/" class="home-button" aria-label="Return to home">
  <div class="circle"></div>
</a>

<style>
  .home-button {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 50;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .home-button:hover {
    transform: scale(1.1);
  }

  .circle {
    width: 40px;
    height: 40px;
    background: #ff4444;
    border-radius: 50%;
    position: relative;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(255, 68, 68, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(255, 68, 68, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(255, 68, 68, 0);
    }
  }

  /* Make it smaller on mobile */
  @media (max-width: 640px) {
    .circle {
      width: 32px;
      height: 32px;
    }
    
    .home-button {
      top: 16px;
      right: 16px;
    }
  }
</style>

<script>
  // Add a subtle rotation animation when hovering
  const button = document.querySelector('.home-button');
  
  button?.addEventListener('mouseenter', () => {
    const circle = button.querySelector('.circle');
    circle?.style.setProperty('animation', 'pulse 1s infinite');
  });
  
  button?.addEventListener('mouseleave', () => {
    const circle = button.querySelector('.circle');
    circle?.style.setProperty('animation', 'pulse 2s infinite');
  });
</script>
